<!-- text with a line border along the top and right sides -->
<!--<image name="top_corner_text">-->

	<_x> 0 </_x>
	<_y> 0 </_y>
	<_width> 170 </_width>
	<_label></_label>
	<_label_visible> &true; </_label_visible>
	<_value></_value>
	<_value_visible> &true; </_value_visible>
  
	<filename> Interface\Shared\solid.dds </filename>
	<zoom> &scale; </zoom>
	<width>
		<copy src="me()" trait="_width"/>
	</width>
	<height> <copy src="globals()" trait="_line_thickness"/> </height>
	<x> <copy src="me()" trait="_x"/> </x>
	<y> <copy src="me()" trait="_y"/> </y>
	<locus> &true; </locus>
	
	<image name="top_corner_text_vert">
		<filename> Interface\Shared\Line\fade_to_bottom.dds </filename>
		<zoom> &scale; </zoom>
		<width> <copy src="globals()" trait="_line_thickness"/> </width>
		<height> 60 </height>
		<x> <copy src="parent()" trait="width"/> </x>
		<y> 0 </y>
	</image>
		
	<rect name="top_corner_text_label">
	<include src="VUI+\outline_rect.xml"/>
		<visible> <copy src="parent()" trait="_label_visible"/> </visible>
		<string> <copy src="parent()" trait="_label"/> </string>
		<font> 2 </font>
		<x> 0 </x>
		<y> 23 </y>
	<_VUI+OutlineIntensity>3</_VUI+OutlineIntensity>
	<_VUI+ShadowOffset>1</_VUI+ShadowOffset>
</rect>
		
	<rect name="top_corner_text_value">
	<include src="VUI+\outline_rect.xml"/>
		<visible> <copy src="parent()" trait="_value_visible"/> </visible>
		<string> <copy src="parent()" trait="_value"/> </string>
		<font> 2 </font>
		<justify> &right; </justify>
		<x>
			<copy src="parent()" trait="width"/>
			<sub> 15 </sub>
		</x>
		<y> 23 </y>
	<_VUI+OutlineIntensity>3</_VUI+OutlineIntensity>
	<_VUI+ShadowOffset>1</_VUI+ShadowOffset>
</rect>

<!--</image>-->
